              %li
                %img{:src => './assets/images/circleplus.svg'}
                %span Service bobcats
              %li
                %img{:src => './assets/images/circleplus.svg'}
                %span Service escavators
        
        %div{:class => 'row'}
          %span{:class => 'mobile mobile3 col s12'} 0409 602 968

        %section{:class => 'contact'}
          %div{:class => 'contact-form'} 
            %h2 Get in touch
            %form{:action => 'https://formspree.io/adxm@msn.com', :method => 'post'}
              %div{:class => 'input-field'}
                %i{:class => 'material-icons prefix'} account_circle
                %input{:type => 'text', :id => 'icon_prefix', :name => 'name', :class => 'validate'}
                %label{:for => 'icon_prefix'} Name
              %div{:class => 'input-field'}
                %i{:class => 'material-icons prefix'} email
                %input{:type => 'email', :id => 'email_inline', :name => 'email', :class => 'validate'}
                %label{:for => 'email_inline'} Email
              %div{:class => 'input-field'}
                %i{:class => 'material-icons prefix'} message
                %textarea{:id => 'message', :name => 'message', :class => 'materialize-textarea'}
                %label{:for => 'message'} Message
              %button{:type => 'submit', :class => 'amber accent-4 btn-small'} Send

          %aside{:class => 'map'}
            %iframe{:src => 'https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d18753.10737704568!2d150.79361812494318!3d-33.80941367455066!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x6bcac4dc51e5492!2sK+%26+C+Auto+Electrics!5e0!3m2!1sen!2sau!4v1546036997326', :allow => 'fullscreen'}

