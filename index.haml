      %main
        %section{:class => 'hero row'}
          %div{:class => 'mission col s6'}
            %h1 Fix Your Truck, Fast
            %h2 We repair and upgrade heavy vehicles and machinery, quickly and effectively. You can come to us, or we can come to you. 24 hours a day, 7 days a week.
          %aside{:class => 'col s6'}
            %img{:class => 'hero-image', :src => './assets/images/hero.jpg'}
          
        %section{:class => 'partners row'}
          %div{:class => 'flex-container col s12'}
            %div{:id => 'freightliner'}
            %div{:id => 'isuzu'}
